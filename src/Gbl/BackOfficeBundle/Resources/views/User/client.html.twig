{% extends '::base.html.twig' %}

{% block title %}
index - Client
{% endblock %}

{% block h1 %}
Client
{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
	<li>
		<i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
	</li>
	<li class="active">
		<i class="fa fa-table"></i> Client
	</li>
</ol>
{% endblock %}

{% block body %}
<div class="col-lg-12">

{% for flashMessage in app.session.flashbag.get('notice') %}
<br /><br />
    <div class="alert alert-success">
    	<a href="#" class="close" data-dismiss="alert">&times;</a>
        <p><img width="20" height="20" src="{{ asset('img/icons/ok.png') }}" alt="success" />  {{ flashMessage }}</p>
    </div>
    
{% endfor %}

	<h2>Liste des Clients</h2>
	<div class="table-responsive">
		<table class="table table-bordered table-hover table-striped">
		    <thead>
		        <tr>
		            <th>#</th>
		            <th>NOM</th>
		            <th>PRENOM</th>
		            <th>NOM D'UTILISATEUR</th>
		            <th>EMAIL</th>
		            <th>ADRESSE</th>
		            <th>VILLE</th>
		            <th>CODE POSTALE</th>
		            <th>PAYS</th>
		            <th>TELEPHONE FIXE</th>
		            <th>TELEPHONE PORTABLE</th>
		        </tr>
		    </thead>
		    <tbody>
		        {% for user in users %}
		        <tr>
		            <td>{{ user.getId }}</td>
		            <td>{{ user.getNom }}</td>
		            <td>{{ user.getPrenom }}</td>
		            <td>{{ user.getUsername }}</td>
		            <td>{{ user.getEmail }}</td>
		            <td>{{ user.getAdresse }}</td>
		            <td>{{ user.getVille }}</td>
		            <td>{{ user.getCodePostal }}</td>
		            <td>{{ user.getPays }}</td>
		            <td>{{ user.getTelephoneFixe }}</td>
		            <td>{{ user.getTelephonePortable }}</td>
				</tr>
		        {% endfor %}
		    </tbody>
		</table>
	</div>
</div>
{% endblock %}

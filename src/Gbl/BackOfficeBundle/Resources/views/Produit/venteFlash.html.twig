{% extends '::base.html.twig' %}

{% block title %}
index - Produit
{% endblock %}

{% block h1 %}
Produit
{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
	<li>
		<i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
	</li>
	<li>
		<i class="fa fa-table"></i> <a href="{{ path('produit.index') }}">Produit</a>
	</li>
	<li class="active">
		<i class="fa fa-table"></i> Vente Flash
	</li>
</ol>
{% endblock %}

{% block body %}
<div class="col-lg-12">
<a href="{{ path('produit.new') }}" class="btn btn-success">Ajouter un produit <i class="fa fa-fw fa-plus"></i></a>


{% for flashMessage in app.session.flashbag.get('notice') %}
	<br /><br />
	<div class="alert alert-success">
		<a href="#" class="close" data-dismiss="alert">&times;</a>
	    <p><img width="20" height="20" src="{{ asset('img/icons/ok.png') }}" alt="success" />  {{ flashMessage }}</p>
	</div>
    
{% endfor %}

	<h2>Liste des Produits en Vente flash</h2>
	<div class="table-responsive">
		<table class="table table-bordered table-hover table-striped">
		    <thead>
		        <tr>
		            <th>#</th>
		            <th>NOM</th>
		            <th>CATEGORIE</th>
		            <th>REFERENCE</th>
		            <th>DESCRIPTION</th>
		            <th>PRIX</th>
		            <th>POIDS</th>
		            <th>DIMENSIONS</th>
		            <th>STOCK</th>
		            <th>VENTE FLASH</th>
		            <th></th>
		            <th></th>
		        </tr>
		    </thead>
		    <tbody>
		        {% for prod in produits %}
		        <tr>
		            <td><img heigth="50px" width="50px" src="{{ asset('uploads/' ~ prod.getFileImg)}}" alt="{{ prod.getNom }}" /></td>
		            <td>{{ prod.getNom }}</td>
		            <td>{{ prod.getCategorie.nom }}</td>
		            <td>{{ prod.getReference }}</td>
		            <td>{{ prod.getDescription }}</td>
		            <td>{{ prod.getPrix }}</td>
		            <td>{{ prod.getPoids }}</td>
		            <td>{{ prod.getDimensions }}</td>
		            <td>{{ prod.getStock }}</td>
		            <td>{% if prod.getVenteFlash == true %}Oui{% else %}Non{% endif %}</td>
		            <td><a href="{{ path('produit.edit', { 'id': prod.getId }) }}"><img width="20" height="20" src="{{ asset('img/icons/edit.png') }}" alt="edit" /></a></td>
		            <td><a href="{{ path('produit.delete', { 'id': prod.getId }) }}"><img width="20" height="20" src="{{ asset('img/icons/delete.png') }}" alt="delete" /></a></td>
		        </tr>
		        {% endfor %}
		    </tbody>
		</table>
	</div>
	
	<h2>Liste des Produits en Vente flash qui sont en rupture de stock</h2>
	<div class="table-responsive">
		<table class="table table-bordered table-hover table-striped">
		    <thead>
		        <tr>
		            <th>#</th>
		            <th>NOM</th>
		            <th>CATEGORIE</th>
		            <th>REFERENCE</th>
		            <th>DESCRIPTION</th>
		            <th>PRIX</th>
		            <th>POIDS</th>
		            <th>DIMENSIONS</th>
		            <th>STOCK</th>
		            <th>VENTE FLASH</th>
		            <th></th>
		            <th></th>
		        </tr>
		    </thead>
		    <tbody>
		        {% for noprod in noproduits %}
		        <tr>
		            <td><img heigth="50px" width="50px" src="{{ asset('uploads/' ~ noprod.getFileImg)}}" alt="{{ noprod.getNom }}" /></td>
		            <td>{{ noprod.getNom }}</td>
		            <td>{{ noprod.getCategorie.nom }}</td>
		            <td>{{ noprod.getReference }}</td>
		            <td>{{ noprod.getDescription }}</td>
		            <td>{{ noprod.getPrix }}</td>
		            <td>{{ noprod.getPoids }}</td>
		            <td>{{ noprod.getDimensions }}</td>
		            <td>{{ noprod.getStock }}</td>
		            <td>{% if noprod.getVenteFlash == true %}Oui{% else %}Non{% endif %}</td>
		            <td><a href="{{ path('produit.edit', { 'id': noprod.getId }) }}"><img width="20" height="20" src="{{ asset('img/icons/edit.png') }}" alt="edit" /></a></td>
		            <td><a href="{{ path('produit.delete', { 'id': noprod.getId }) }}"><img width="20" height="20" src="{{ asset('img/icons/delete.png') }}" alt="delete" /></a></td>
		        </tr>
		        {% endfor %}
		    </tbody>
		</table>
	</div>
</div>
{% endblock %}

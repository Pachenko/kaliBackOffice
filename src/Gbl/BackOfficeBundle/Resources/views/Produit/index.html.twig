{% extends '::base.html.twig' %}

{% block title %}
index - Produit
{% endblock %}

{% block h1 %}
Produit
{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
	<li>
		<i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
	</li>
	<li class="active">
		<i class="fa fa-table"></i> Produit
	</li>
</ol>
{% endblock %}

{% block body %}
<div class="col-lg-12">
<a href="{{ path('produit.new') }}" class="btn btn-success">Ajouter un produit <i class="fa fa-fw fa-plus"></i></a>

{% for flashMessage in app.session.flashbag.get('notice') %}
<br /><br />
    <div class="alert alert-success">
    	<a href="#" class="close" data-dismiss="alert">&times;</a>
        <p><img width="20" height="20" src="{{ asset('img/icons/ok.png') }}" alt="success" />  {{ flashMessage }}</p>
    </div>
    
{% endfor %}

	<h2>Liste des Produits</h2>
	<div class="table-responsive">
		<table class="table table-bordered table-hover table-striped">
		    <thead>
		        <tr>
		            <th>#</th>
		            <th>NOM</th>
		            <th>REFERENCE</th>
		            <th>DESCRIPTION</th>
		            <th>PRIX</th>
		            <th>POIDS</th>
		            <th>DIMENSIONS</th>
		            <th>STOCK</th>
		            <th>VENTE FLASH</th>
		        </tr>
		    </thead>
		    <tbody>
		        {% for prod in produits %}
		        <tr>
		            <td>{{ prod.getId }}</td>
		            <td>{{ prod.getNom }}</td>
		            <td>{{ prod.getReference }}</td>
		            <td>{{ prod.getDescription }}</td>
		            <td>{{ prod.getPrix }}</td>
		            <td>{{ prod.getPoids }}</td>
		            <td>{{ prod.getDimensions }}</td>
		            <td>{{ prod.getStock }}</td>
		            <td>{% if prod.getVenteFlash == true %}Oui{% else %}Non{% endif %}</td>
		            <td><a href="{{ path('produit.edit', { 'id': prod.getId }) }}"><img width="20" height="20" src="{{ asset('img/icons/edit.png') }}" alt="edit" /></a> 
		            <a href="{{ path('produit.delete', { 'id': prod.getId }) }}"><img width="20" height="20" src="{{ asset('img/icons/delete.png') }}" alt="delete" /></a></td>
		        </tr>
		        {% endfor %}
		    </tbody>
		</table>
	</div>
</div>
{% endblock %}

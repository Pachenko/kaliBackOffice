{% extends '::base.html.twig' %}

{% block title %}
index - Categorie
{% endblock %}

{% block test %}
Categorie
{% endblock %}

{% block body %}
<div class="col-lg-12">
	<h2>Categorie</h2>
	<div class="table-responsive">
		<table class="table table-bordered table-hover table-striped">
		    <thead>
		        <tr>
		            <th>#</th>
		            <th>NOM</th>
		            <th>DESCRIPTION</th>
		        </tr>
		    </thead>
		    <tbody>
		        {% for cat in categories %}
		        <tr>
		            <td>{{ cat.getId }}</td>
		            <td>{{ cat.getNom }}</td>
		            <td>{{ cat.getDescription }}</td>
		        </tr>
		        {% endfor %}
		    </tbody>
		</table>
	</div>
</div>
{% endblock %}

{% extends '::base.html.twig' %}

{% block title %}
index - Categorie
{% endblock %}

{% block h1 %}
Categorie
{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
	<li>
		<i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
	</li>
	<li class="active">
		<i class="fa fa-table"></i> Cat√©gorie
	</li>
</ol>
{% endblock %}

{% block body %}
<div class="col-lg-12">
<button class="btn">Ajouter une categorie <i class="fa fa-fw fa-plus"></i></button>
	<h2>Liste des Categories</h2>
	<div class="table-responsive">
		<table class="table table-bordered table-hover table-striped">
		    <thead>
		        <tr>
		            <th>#</th>
		            <th>NOM</th>
		            <th>DESCRIPTION</th>
		        </tr>
		    </thead>
		    <tbody>
		        {% for cat in categories %}
		        <tr>
		            <td>{{ cat.getId }}</td>
		            <td>{{ cat.getNom }}</td>
		            <td>{{ cat.getDescription }}</td>
		            <td><img width="20" height="20" src="{{ asset('img/icons/edit.png') }}" alt="edit" /> 
		            <img width="20" height="20" src="{{ asset('img/icons/delete.png') }}" alt="delete" /></td>
		        </tr>
		        {% endfor %}
		    </tbody>
		</table>
	</div>
</div>
{% endblock %}
